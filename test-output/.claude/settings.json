{
  "permissions": {
    "deny": [
      "Read|Write|Edit(.env*)",
      "Read|Write|Edit(**/*.pem)",
      "Read|Write|Edit(**/*.key)",
      "Bash(rm -rf *)",
      "Bash(git push --force*)",
      "Bash(curl *)"
    ],
    "allow": [
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(gh *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Deploy to production?"
          }
        ]
      }
    ]
  }
}