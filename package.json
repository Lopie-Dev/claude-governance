{
  "name": "@lopiedev/claude-governance",
  "version": "1.0.0",
  "description": "Governance as Code framework for Claude Code - compile governance.yaml to hooks and CI workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-governance": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "governance",
    "compliance",
    "security",
    "hooks",
    "ci-cd"
  ],
  "author": "Lopie Development",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lopie-Dev/claude-governance.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
